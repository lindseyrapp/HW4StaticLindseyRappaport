---
const { title, description, link } = Astro.props;
---

<div class="project-card">
    <h3>{title}</h3>
    <p>{description}</p>
    <a href={link} target="_blank">View Project</a>
</div>

<style>
.project-card {
    border: 1px solid #ddd;
    padding: 1rem;
    margin: 1rem 0;
    border-radius: 8px;
}
.project-card h3 {
    margin: 0;
}
.project-card a {
    color: var(--accent-color);
    text-decoration: none;
    font-weight: bold;
}
</style>
